            <column name="string_2" type="VARCHAR(32)"/>
            <column name="string_3" type="VARCHAR(32)"/>
            <column name="type_1" type="type_1_type"/>
            <column name="big_decimal_1" type="NUMERIC"/>
            <column name="big_decimal_2" type="NUMERIC"/>
